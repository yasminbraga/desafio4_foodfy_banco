{% extends '../layout.njk' %}

{% block content %}
  <div class="content">
    <div class="content-title">
      <h2>Gerenciar chefs</h2>
      <a href="/admin/chefs/create">Novo chef</a>
    </div>
    <div class="chef-cards">
        {% for chef in chefs %}
          <div class="chef-card">
              <img src="{{ chef.avatar_url }}" alt="Imagem de {{ chef.name }}">
              <div>
                <p class="chef-name">{{ chef.name }}</p>
                <a href="/admin/chefs/{{ chef.id }}">Visualizar</a>
              </div>
          </div>
        {% endfor %}
    </div>
  </div>

{% endblock content %}