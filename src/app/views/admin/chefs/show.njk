{% extends '../layout.njk' %}

{% block content %}
  <div class="chef">
    <div class="chef-head">
      <p>Chef: {{chef.name}}</p>
      <a href="/admin/chefs/{{chef.id}}/edit">Editar chef</a>
    </div>
    <div class="chef-content">
      <img src="{{ chef.avatar_url }}" alt="">
      <div class="chef-info">
        <h1>{{ chef.name }}</h1>
        <p>{{ chef.total_recipes }} receitas</p>
      </div>
    </div>

      <div class="chef-recipes">
      <h2>Receitas</h2>
      <div class="cards">
        {% for recipe in recipes %}
          <div class="card">
              <img src="{{ recipe.image }}" alt="Imagem de {{ recipe.title }}">
              <div>
                <p class="recipe-title">{{ recipe.title }}</p>
                <p class="recipe-author">por {{ chef.name }}</p>
                <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
              </div>
          </div>
        {% endfor %}
      </div>
      </div>

  </div>

{% endblock content %}