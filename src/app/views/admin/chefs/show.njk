{% extends '../layout.njk' %}

{% block content %}
  <div class="chef">
    <div class="chef-head">
      <p>Chef: {{chef.name}}</p>
      <a href="/admin/chefs/{{chef.id}}/edit">Editar chef</a>
    </div>
    <div class="chef-content">
      <img src="{{ chef.avatar_url }}" alt="">
      <div class="chef-info">
        <h1>{{ chef.name }}</h1>
        <p>{{ chef.total_recipes }}</p>
      </div>
    </div>
  </div>

{% endblock content %}