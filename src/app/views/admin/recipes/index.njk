{% extends '../layout.njk' %}

{% block content %}

<div class="content">
  <div class="content-title">
    <h2>Gerenciar receitas</h2>
    <a href="/admin/recipes/create">Nova receita</a>
  </div>
  <div class="cards">
      {% for recipe in recipes %}
        <div class="card">
            <img src="{{ recipe.image }}" alt="Imagem de {{ recipe.title }}">
            <div>
              <p class="recipe-title">{{ recipe.title }}</p>
              <p class="recipe-author">{{ recipe.author }}</p>
              <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
            </div>
        </div>
      {% endfor %}
  </div>
</div>

{% endblock %}